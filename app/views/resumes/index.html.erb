<h1>Resumes#index</h1>
<p>Find me in app/views/resumes/index.html.erb</p>
<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br />

<%= link_to "اضافة مكاتبة وارد", new_resume_path(:type =>'incoming'), class: "btn btn-primary" %>

<%= link_to "اضافة مكاتبة صادر", new_resume_path(:type =>'outcoming'), class: "btn btn-primary" %>

<br />
<br />
<%= search_field('xz','ds') %>

<table class = "table table-bordered table-striped">
   <thead>.
      <tr>
         <th>Name</th>
         <th>Download Link</th>
         <th>رقم مكاتبة المركز</th>
         <th> </th>
      </tr>
   </thead>
   
   <tbody>
      <% @resumes.each do |resume| %>
         
         <tr>
            <td><%= resume.name %></td>
            <td><%= link_to resume.name, resume.attachment_url %></td>
            <td><%= resume.رقم_مكاتبة_المركز %></td>
            <td><%= button_to "Delete",  resume, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{resume.name}?" %></td>

         </tr>
         
      <% end %>
   </tbody>
   
</table>